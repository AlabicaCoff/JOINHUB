@page
@model LoginModel
@section AddToHead {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

<div class="login">
    <h1>Login</h1>
    <form class="form" id="account" method="post">
        <div>
            <input asp-for="Input.Email" class="input" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="Input.Password" class="input" aria-required="true" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button id="login-submit" type="submit">Log in</button>
        <div class="goRegister">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
