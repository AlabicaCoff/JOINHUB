@page
@model LoginModel
@section AddToHead {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

<form class="form" id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
    <div class="login">
        <h1>Log in</h1>
        <div>
            <input asp-for="Input.UserName" class="input" aria-required="true" placeholder="Username / Email" />
        </div>
        <div>
            <span asp-validation-for="Input.UserName" class="error"></span>
        </div>
        <div>
            <input asp-for="Input.Password" class="input" aria-required="true" placeholder="Password" />
        </div>
        <div>
            <span asp-validation-for="Input.Password" class="error"></span>
        </div>
        <button id="login-submit" type="submit">Log in</button>
        <div class="goRegister">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
