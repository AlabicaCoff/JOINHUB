@page
@model LogoutModel
@section AddToHead {
    <link href="@Url.Content("~/css/logout.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/sharedStyles.css")" rel="stylesheet" type="text/css" />
}
@{
    ViewData["Title"] = "Log out";
}

<div class="align-content-center">
    <div class="logout">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</div>
</div>
