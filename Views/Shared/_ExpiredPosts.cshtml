<script>
    $(document).ready(function () {
        // Function to periodically check post expiration
        function checkPostExpiration() {
            $.ajax({
                url: '@Url.Action("CheckPostExpiration", "Post")',
                type: 'POST',
                success: function (data) {
                    // Handle the response data as needed
                    console.log(data);
                    // For example, you can update the UI based on the response
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }

        function deletePost() {
            $.ajax({
                url: '@Url.Action("DeletePost", "Post")',
                type: 'POST',
                success: function (data) {
                    // Handle the response data as needed
                    console.log(data);
                    // For example, you can update the UI based on the response
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }

        checkPostExpiration();
        deletePost();

        setInterval(checkPostExpiration, 30000);
        setInterval(deletePost, 30000);
    });
</script>