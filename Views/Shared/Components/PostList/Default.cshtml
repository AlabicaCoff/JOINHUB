@model IEnumerable<Post>
@{
    //var ctime = $"{Model.CreatedTime:yyyyMMddHHmm}"
}

<link href="@Url.Content("~/css/postlist.css")" rel="stylesheet" type="text/css"/>
<div class="row">
    @foreach (var item in Model) {
        <div class="crd">
            <div class="header">
                <span class="left">
                    <span class="number">@item.Post_Participants.Count/@item.NumberOfParticipants</span>
                    <a class="title" href="">@item.Title</a>
                </span>
                <div class="right">
                    <span class="status">@item.Status</span>
                    <span class="time">@Html.DisplayFor(modelItem => item.ExpireTime)</span>
                </div>
            </div>
                
            <div class="content">
                <span class="text">@item.Description</span>
            </div>

            <div class="foot">
                <div class="right">
                    <span class="author">
                        @item.Author.FullName Â· <script></script>
                    </span>
                    <span class="time"> </span>
                </div>
                @if (item.Tag is not null) {
                    <a class="tag" href="" >@item.Tag</a>
                }
            </div>
        </div>
    }
</div>