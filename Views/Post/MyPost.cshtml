@using Test.Data.Enum
@model IEnumerable<Post>
@section AddToHead {
    <link href="@Url.Content("~/css/mypost.css")" rel="stylesheet" type="text/css" />
}
@{
    ViewData["Title"] = "My Posts";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table w-auto">
            <thead>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <a asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Tag)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NumberOfParticipants)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CreatedTime)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ExpireTime)
                        </td>
                        @if (item.Status == PostStatus.Active)
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Close" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Close </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <p>User ID: @ViewData["UserId"]</p>
    </div>
</div>

