@model IEnumerable<Post>

@{
    ViewData["Title"] = "My Posts";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table w-auto">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Tag)</th>
                    <th>@Html.DisplayNameFor(model => model.NumberOfParticipants)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedTime)</th>
                    <th>@Html.DisplayNameFor(model => model.ExpireTime)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Tag)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NumberOfParticipants)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CreatedTime)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ExpireTime)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>